{
    "compilerOptions": {
      "target": "es2016",
      "jsx": "react",
      "module": "ESNext",
      "moduleResolution": "Node",
      "baseUrl": "./",
      "outDir": "./dist/",
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "exclude": [
      "dist",
      "node_modules",
      "**/*.{test|stories}.*",
    ]
}